<h1>Shows List</h1>

<table>

  <thead>
    <tr>
      <th>Show Name</th>
      <th>Show Picture URL</th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= link_to show.name, show_path(show) %></td>
        <td><%= show.picture %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<a href="/shows/new">New Show</a>